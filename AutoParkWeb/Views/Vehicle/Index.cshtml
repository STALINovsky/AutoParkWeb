@model Vehicle

@{
    ViewData["Title"] = "Vehicle";
}

<div class="card">
    <div class="card-header"><h3>Vehicle: @Model.Id</h3></div>
    <div class="card-body">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="ModelName"></label>
            <div class="col-sm-9">
                <text>@Model.ModelName</text>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label font-weight-bolder">Vehicle type</label>
            <div class="col-sm-9">
                <text>@Model.VehicleType.TypeName</text>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="Color"></label>
            <div class="col-sm-9">
                <text>@Model.Color</text>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="ManufactureYear"></label>
            <div class="col-sm-9">
                <text>@Model.ManufactureYear</text>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="Mileage"></label>
            <div class="col-sm-9">
                <text>@Model.Mileage</text>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="RegistrationNumber"></label>
            <div class="col-sm-9">
                <text>@Model.RegistrationNumber</text>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="VolumeOfTank"></label>
            <div class="col-sm-9">
                <text>@Model.VolumeOfTank</text>
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="Consumption"></label>
            <div class="col-sm-9">
                <text>@Model.Consumption</text>
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="DrivingRange"></label>
            <div class="col-sm-9">
                <text>@Model.DrivingRange</text>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="Weight"></label>
            <div class="col-sm-9">
                <text>@Model.Weight</text>
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-3 col-form-label font-weight-bolder" >TaxPerMonth</label>
            <div class="col-sm-9">
                <text>$@Model.CalculateTaxPerMonth()</text>
            </div>
        </div>


    </div>
</div>

