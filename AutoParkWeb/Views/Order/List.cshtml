@model IEnumerable<Order>
@{
    ViewData["Title"] = "Vehicle Types";
}


<table class="table">

    <thead>
        <tr>
            <th><strong>Id</strong></th>
            <th>Description</th>
            <th>Vehicle model name</th>
            <th>Vehicle registration number</th>
            <th>Spare parts count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><a asp-controller="Order" asp-action="Index" asp-route-id="@item.Id">@item.Id</a></td>
                <td>@item.Description</td>
                <td>@item.TargetVehicle.ModelName</td>
                <td>@item.TargetVehicle.RegistrationNumber</td>
                <td>@item.OrderItems.Count</td>
                <td>
                    <div>
                        <form class="d-inline" asp-controller="Order" asp-action="Delete" asp-route-id="@item.Id">
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                        <a class="btn btn-sm btn-outline-primary" asp-controller="Order" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    <caption>To add new item press <a class="btn btn-sm btn-primary" asp-controller="Order" asp-action="Add">Add</a></caption>
</table>
