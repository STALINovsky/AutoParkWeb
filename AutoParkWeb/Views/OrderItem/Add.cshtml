@model OrderItem

@{
    ViewData["Title"] = "Add spare part";
}

<div class="card">
    <div class="card-header"><h3>Add spare part</h3></div>
    <div class="card-body">
        <form asp-controller="OrderItem" asp-action="Add" method="post">

            <input hidden asp-for="OrderId" class="form-control">

            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Spare part</label>
                <div class="col-sm-9">
                    <select class="form-control" asp-for="SparePartId" asp-items="@ViewBag.SparePartList"></select>
                </div>
            </div>

            <div><span asp-validation-for="Count" class="text-danger"></span></div>
            <div class="form-group row">
                <label asp-for="Count" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="Count" />
                </div>
            </div>

            <div class="text-center">
                <button class="btn btn-primary mx-auto">Add</button>
            </div>
        </form>
    </div>
</div>