@model OrderItemViewModel

@{
    ViewData["Title"] = "Update - Order item";
}


<div class="card">
    <div class="card-header"><h3>Update order item</h3></div>
    <div class="card-body">
        <form asp-controller="OrderItem" asp-action="Update">
            <input asp-for="OrderId" hidden>
            <input hidden asp-for="OrderItem.Id"/>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Spare part</label>
                <div class="col-sm-9">
                    <select asp-for="OrderItem.SparePart.Id" class="form-control" asp-items="ViewBag.SparePartList"></select>
                </div>
            </div>

            <div><span asp-validation-for="OrderItem.Count" class="text-danger"></span></div>
            <div class="form-group row">
                <label asp-for="OrderItem.Count" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="OrderItem.Count" class="form-control">
                </div>
            </div>

            <div class="text-center">
                <button class="btn btn-block btn-primary mx-auto">Update</button>
            </div>
        </form>
    </div>
</div>

