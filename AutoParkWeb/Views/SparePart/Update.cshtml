@model SparePart
@{
    ViewData["Title"] = "Update - Spare part";
}
<div class="card">
    <div class="card-header"><h3>Update spare part</h3></div>
    <div class="card-body">
        <form asp-controller="SparePart" asp-action="Update" method="post">
            <input asp-for="Id" hidden>

            <div><span asp-validation-for="Name" class="text-danger"></span></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Name" class="form-control">
                </div>
            </div>

            <div><span asp-validation-for="Description" class="text-danger"></span></div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Description" class="form-control">
                </div>
            </div>

            <div class="text-center">
                <button class="btn btn-block btn-primary mx-auto">Update</button>
            </div>
        </form>
    </div>
</div>