@model VehicleType
@{
    ViewData["Title"] = "Update - vehicle type";
}

<div class="card">
    <div class="card-header"><h3>Update vehicle type</h3></div>
    <div class="card-body">
        <form asp-controller="VehicleType" asp-action="Update">
            <input asp-for="Id" hidden>

            <div><span asp-validation-for="TaxCoefficient" class="text-danger"></span></div>
            <div class="form-group row">
                <label asp-for="TaxCoefficient" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="TaxCoefficient" class="form-control">
                </div>
            </div>

            <div><span asp-validation-for="TypeName" class="text-danger"></span></div>
            <div class="form-group row">
                <label asp-for="TypeName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="TypeName" class="form-control">
                </div>
            </div>

            <div class="text-center">
                <button class="btn btn-block btn-primary mx-auto">Update</button>
            </div>
        </form>
    </div>
</div>
